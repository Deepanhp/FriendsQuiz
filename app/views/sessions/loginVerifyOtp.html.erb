<!--Edit password form-->
<h1 class="text-center mt-3 mb-5">Verify OTP for <%= current_user.username %></h1>

<div class="row mt-3">
	<div class="col-md-6 offset-md-3 col-sm-6 offset-sm-3 col-6 offset-3">
		<%= form_for(:user, url: loginVerifyOtp_path) do |f| %>
			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :otp %>
				</h5>
					<%= f.text_field :otp, class: "form-control", placeholder: "Enter OTP" %>
			</div>
			<div class="form-group text-center">
					<%= f.submit "Verify OTP", class: 'btn btn-primary btn-lg' %>
			</div>
			<div><p>OTP is valid for next two minutes</p></div>
		<% end %>
		<div class="text-center">
			[ <%= link_to "Back to log in", logout_path, method: :delete %> ]
		</div>
	</div>
</div>