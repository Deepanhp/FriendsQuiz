<h1 class="mt-3">Create a Quiz</h1>

<% if @quiz.errors.any? %>

<h2>The following errors prevented the quiz from getting created</h2>

	<ul>

	<% @quiz.errors.full_messages.each do |msg| %>

		<li><%= msg %></li>

	<% end %>

	</ul>

<% end %>


<div class="row mt-5">
	<div class="col-md-8 offset-md-2 col-sm-8 offset-sm-2 col-8 offset-2">
		<%= form_for @quiz do |f| %>
		  <div class="form-group">
		    <h4 class="font-weight-normal"><%= f.label :quiz_name%></h5>
		    <%= f.text_field :name, class: "form-control", placeholder: "Enter name for the quiz" %>
		  </div>
		  <%= f.submit class: "btn btn-primary" %>
		<% end %>
	</div>
</div>